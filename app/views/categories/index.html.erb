<%= provide :title, t("category.index_view.title") %>

<div class="container index-box">
  <div class="row center">
    <h4><%= t "category.index_view.title" %></h4>
  </div>
  <div class="row index-header">
    <div class="col s2">
      <h6 class="index-header-title">
        <%= t "category.index_view.name" %>
      </h6>
    </div>
    <div class="col s6">
      <h6 class="index-header-title">
        <%= t "category.index_view.description" %>
      </h6>
    </div>
    <div class="col s2">
      <h6 class="index-header-title">
        <%= t "category.index_view.words" %>
      </h6>
    </div>
    <div class="row s2"></div>
  </div>
  <div class="row">
    <ul>
      <%= render @categories %>
    </ul>
    <div class="row center">
      <%= paginate @categories, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
