<%= provide :title, t("password_reset.edit_view.title") %>
<div class="parallax-container signup-parallax">
  <div class="parallax">
    <%= image_tag "bg01.png" %>
  </div>
  <div class="row form-box">
    <div class="row center" id="signup-title">
      <h4><%= t "password_reset.edit_view.title" %></h4>
    </div>
    <br>
    <div class="container">
      <%= form_for @user, url: password_reset_path(params[:id]) do |f| %>
        <%= hidden_field_tag :email, @user.email %>
        <div class="row">
          <div class="input-field col s12">
            <%= f.password_field :password, class: "validate" %>
            <%= f.label :password, for: :password %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.password_field :password_confirmation, class: "validate" %>
            <%= f.label t("password_reset.edit_view.confirmation"),
              for: :password_confirmation %>
          </div>
        </div>
        <div class="row">
          <%= f.submit t("password_reset.edit_view.update_password"),
            class: "btn btn-large btn-register waves-effect waves-light" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "layouts/footer" %>
