<%= form_for @user, url: yield(:submit_path), class: "col s12" do |f| %>
  <div class="row">
    <div class="col s12">
      <div class="input-field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "validate" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="input-field">
        <%= f.label :email %>
        <%= f.text_field :email, class: "validate" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="input-field">
        <%= f.label :password %>
        <%= f.password_field :password, class: "validate" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="input-field">
        <%= f.label :password_confirmation,
        t("user.form_view.password_confirmation") %>
        <%= f.password_field :password_confirmation,
        class: "validate" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <%= f.submit yield(:button_text),
      class: "btn waves-effect waves-light validate" %>
    </div>
  </div>
<% end %>
