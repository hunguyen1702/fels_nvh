<%= provide :title, t("user.edit_view.title") %>
<%= provide :button_text, t("user.edit_view.save_change") %>
<div class="parallax-container" id="form-container">
  <div class="row form-box" id="ps-box">
    <div class="row center" id="signup-title">
      <h4><%= t "user.edit_view.title" %></h4>
    </div>
    <%= form_for @user, class: "col s12" do |f| %>
      <div class="row">
        <div class="col s5">
          <%= image_tag @user.avatar.url, class: "avatar",
            id: "avatar-preview" %>
          <div class="row">
            <%= f.file_field :avatar, accept: Settings.user.avatar_type,
              hidden: true %>
            <%= button_tag t("user.edit_view.change_avatar"),
              type: "button", class: "btn waves-effect waves-light",
              id: "avatar-change-button" %>
          </div>
        </div>

        <div class="col s7">
          <div class="row">
            <%= render "form", f: f %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render "layouts/footer" %>
